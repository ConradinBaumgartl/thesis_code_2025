        expand("data/alignment/{genome}/{sample}.ALL.nreads", genome = list(config["genomes"].keys()), sample = samples),
        expand("data/alignment/{genome}/{sample}.ALL.histogram", genome = list(config["genomes"].keys()), sample = samples),
        expand("data/alignment/{genome}/{sample}.ALL.bw", genome = list(config["genomes"].keys()), sample = samples),
        expand("data/alignment/{genome}/QC/{sample}.ALL/genome_results.txt", genome = list(config["genomes"].keys()), sample = samples),
        expand("data/alignment/{genome}/{sample}.ALL.SEACR.stringent.bed", genome = list(config["genomes"].keys()), sample = samples)
